<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FFmpegArgs" Version="2.0.0" />
    <PackageReference Include="FFmpegArgs.Cores" Version="2.0.0" />
    <PackageReference Include="FFmpegArgs.Executes" Version="2.0.2" />
    <PackageReference Include="FFmpegArgs.Filters" Version="2.0.1" />
    <PackageReference Include="FFmpegArgs.Filters.Common" Version="2.0.0" />
    <PackageReference Include="FFmpegArgs.Inputs" Version="2.0.0" />
    <PackageReference Include="FFmpegArgs.Outputs" Version="2.0.0" />
    <PackageReference Include="FFMpegCore" Version="5.2.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.5" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.5" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="configuration.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
